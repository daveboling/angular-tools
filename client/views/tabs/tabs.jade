doctype html
html(ng-app='tabs')
  head
    include ../shared/css
    title Tabbing System w/ Bootstrap
  body
    section(ng-controller='TabController')
      ul.nav.nav-pills
        li(ng-class='{ active:isSelected(1) }'): a(href='#'  ng-click='setTab(1)') Description
        li(ng-class='{ active:isSelected(2) }'): a(href='#' ng-click='setTab(2)') Specs
        li(ng-class='{ active:isSelected(3) }'): a(href='#' ng-click='setTab(3)') Reviews
      p You clicked on Tab # {{tab}}

      #description.panel(ng-show='isSelected(1)')
        p Here is your description, by default.
      #specs.panel(ng-show='isSelected(2)')
        p Here is your specs.
      #reviews.panel(ng-show='isSelected(3)')
        p Here are your reviews


include ../shared/scripts
  script(src='tabs.js')